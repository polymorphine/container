{
    "name": "polymorphine/container",
    "description": "PSR-11 Container for Dependencies & Configuration",
    "type": "library",
    "minimum-stability": "stable",
    "require": {
        "php": "^7.0",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "polymorphine/cs": "@dev",
        "phpunit/phpunit": "^6.5",
        "php-coveralls/php-coveralls": "^2.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Shudd3r",
            "email": "q3.shudder@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Polymorphine\\Container\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Polymorphine\\Container\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "run-tests": "phpunit --configuration phpunit.xml.dist",
        "style-check": "polymorphine-cs src"
    }
}
